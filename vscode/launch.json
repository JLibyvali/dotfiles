// Module From vscode-cmake-tools:https://github.com/microsoft/vscode-cmake-tools/blob/main/docs/debug-launch.md
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LLDB",
            "type": "lldb",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                },
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "type": "gdb",
            "request": "launch",
            "name": "GDB",
            "program": "${workspaceFolder}/build/"
        },
        // For Debuging CMake scripts
        {
            "name": "CMake Configure Debug ",
            "type": "cmake",
            "request": "launch",
            "cmakeDebugType": "configure",
            "clean": true,
            "configureAll": false
        },
        {
            "name": "CMake Script debugging",
            "type": "cmake",
            "request": "launch",
            "cmakeDebugType": "script",
            "scriptPath": "${workspaceFolder}/build/<Debug content>.cmake"
        },
        {
            "type": "cmake",
            "request": "launch",
            "name": "Debug externally launched ",
            "cmakeDebugType": "external",
            "pipeName": "<insert-pipe-name>"
        },
    ]
}