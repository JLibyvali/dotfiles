{
    // User global confifguration
    // VScode settings
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.fontFamily": "'Droid Sans Mono', 'monospace'",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
       },
        "zsh": {
            "path": "zsh"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    // git 
    "git.openRepositoryInParentFolders": "never",

    // vim extension 
    "vim.useSystemClipboard": true,
    "cmake.configureOnOpen": true,
    "vim.smartRelativeLine": true,
    "vim.vimrc.enable": true,
    // Cmake tools
    "cmake.options.statusBarVisibility": "visible",
    "cmake.sourceDirectory": "${workspaceFolder}",
    // Clang and Clang-format
    "clangd.arguments": ["--compile-commands-dir=${workspaceFolder}/build"],
    "clangd.path": "/home/jlibyvali/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/18.1.3/clangd_18.1.3/bin/clangd",
    "clang-format.executable": "/usr/bin/clang-format",
    "clang-format.style": "file",
    "clang-format.fallbackStyle": "Google",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "files.associations": {
        "*.S": "lldb.disassembly"
    },


    // lldb
    "lldb.verboseLogging": true,
    
    // Cmake 
    "cmake.showConfigureWithDebuggerNotification": false,
    "cmake.showOptionsMovedNotification": false,

    "C_Cpp_Runner.cCompilerPath": "clang",
    "C_Cpp_Runner.cppCompilerPath": "clang++",
}