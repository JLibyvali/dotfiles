{
    // User global confifguration
    // VScode settings
    "editor.tabSize": 4,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.fontFamily": "'Droid Sans Mono', 'monospace'",
    "editor.defaultFormatter": "xaver.clang-format",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    // git 
    "git.openRepositoryInParentFolders": "never",
    // vim extension        
    "vim.overrideCopy": true, // using vim copy-mode override vscode'
    "vim.hlsearch": true, // highlight all text matched
    "vim.useSystemClipboard": true,
    "vim.smartRelativeLine": true,
    "vim.vimrc.enable": false,
    "vim.useCtrlKeys": false,
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-u>": true,
        "<C-c>": true,
        "<C-v>": true,
        "<C-r>": true,
    },
    // To improve performance
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // Cmake tools
    "cmake.configureOnOpen": true,
    "cmake.options.statusBarVisibility": "visible",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.showOptionsMovedNotification": false,
    // Clang and Clang-format
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build"
    ],
    "clangd.path": "/home/jlibyvali/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/18.1.3/clangd_18.1.3/bin/clangd",
    
    "clang-format.assumeFilename": ".clang-format",
    "clang-format.executable": "/usr/bin/clang-format",
    "clang-format.style": "file",
    "clang-format.fallbackStyle": "none",
    // To use clangd format or .calng-format
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cmake]": {
        "editor.defaultFormatter": "cheshirekow.cmake-format"
    },
    // lldb
    "lldb.verboseLogging": true,
    "files.associations": {
        "*.S": "lldb.disassembly"
    },
    // cmake-format
    "cmakeFormat.exePath": "/home/jlibyvali/.local/bin/cmake-format",
    "workbench.settings.applyToAllProfiles": [
        "editor.tabSize"
    ],
    "redhat.telemetry.enabled": false,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
}