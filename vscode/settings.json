{
// TO improve performance
    "extensions.experimental.affinity": {
        "vscode.vim": 1
    },
// Set 
    "editor.tabSize": 4,
    "editor.tabCompletion": "on",
    "editor.defaultFormatter": "xaver.clang-format",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.untrustedFiles": "open",
    "extensions.autoUpdate": false,
// Set VSCode default  shell in different system
    "terminal.external.linuxExec": "/usr/bin/gnome-terminal",
    "terminal.external.windowsExec": "C:\\Windows\\System32\\cmd.exe",
    "terminal.external.osxExec": "Terminal.app",

// cmake language support
// cmake-tools settings for some auto feature
    "[cmake]": {
        "editor.defaultFormatter": "josetr.cmake-language-support-vscode"
    },
    "cmake.format.allowOptionalArgumentIndentation": true,
    "cmake.format.spaceAfterCommandName": true,
    "cmake.format.spaceInParentheses": true,
    "cmake.options.statusBarVisibility": "visible",
    "cmake.showOptionsMovedNotification": false,
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.showConfigureWithDebuggerNotification": false,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],

// Set settings to All profiles
    "workbench.settings.applyToAllProfiles": [
        "editor.defaultFormatter",
        "cmake.options.statusBarVisibility",
        "vim.useSystemClipboard"
    ],
    
// vim 
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.useCtrlKeys": false,
    "vim.handleKeys": {
        "<C-r>": true,
        "<C-c>": true,
        "<C-d>": true,
        "<C-v>": true,
    },

// Themes
    "workbench.iconTheme": "material-icon-theme",
    "makefile.configureOnOpen": false,
    "workbench.colorTheme": "Tomorrow Night Blue",
// Github
    "git.openRepositoryInParentFolders": "always",
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
// clang-tidy
    "clang-tidy.executable": "/usr/bin/clang-tidy",
    "clang-tidy.buildPath": "/build/compile_commands.json",
}